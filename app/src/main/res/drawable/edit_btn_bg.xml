<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
  <item android:state_pressed="true" >
    <shape android:shape="rectangle"  >
      <corners android:radius="5dip" />
      <stroke android:width="1dip" android:color="#ff4c00" />
      <gradient android:angle="-90" android:startColor="#b33500" android:endColor="#ff5e1a"  />
    </shape>
  </item>
  <item android:state_focused="true">
    <shape android:shape="rectangle"  >
      <corners android:radius="5dip" />
      <stroke android:width="1dip" android:color="#ff5e1a" />
      <solid android:color="#b33500"/>
    </shape>
  </item>
  <item >
    <shape android:shape="rectangle"  >
      <corners android:radius="5dip" />
      <stroke android:width="1dip" android:color="#b33500" />
      <gradient android:angle="-90" android:startColor="#ff5e1a" android:endColor="#ff4c00" />
    </shape>
  </item>
</selector>